extends ../_template

block variables
  - var title = 'About'

block content
  .wrapper
    section.section.hero
        .top-line
          .top-line__left
              ul.socials
                  li.socials__item
                    a(href="#" class="socials__link socials__link_vk")
                  li.socials__item
                    a(href="#" class="socials__link socials__link_gh")
                  li.socials__item
                    a(href="#" class="socials__link socials__link_in")

