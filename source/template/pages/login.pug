extends ../_template

block variables
  - var title = 'Авторизация'

block content
    .index-page-wrapper
        .container
           
            .login-wrapper
                form.login#login
                    .login__title
                        .subtitle Авторизуйтесь
                    .login__inputs
                      .login__name-wrapp
                        input(type="text" name="name" required placeholder="Логин").login__name#name
                        span.login__name-pic <i class="fa fa-user" aria-hidden="true"></i>
                       
                      .login__password-wrapp
                        input(type="password" name="password" required placeholder="Пароль").login__password#password
                        span.login__password-pic <i class="fa fa-key fa-fw" aria-hidden="true"></i>
                        
                      label(for="human")
                          input(type="checkbox" name="human").login__human#human
                          span.login__human_check
                          span Я человек
                      span.login__text Вы точно не робот?
                      .login__robot-block
                        label(for="robot_yes")
                            input(type="radio" name="robot").login__robot#robot_yes
                            span.login__robot_check
                            span Да
                        label(for="robot_no")
                            input(type="radio" name="robot").login__robot#robot_no
                            span.login__robot_check
                            span Не уверен
                    .login__btns
                      a(href="index.html").login__btn На главную
                      a(href="#" onclick="document.getElementById('login').submit(); return false;").login__btn Войти
                                        

